<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <!-- Message Box -->

    <!-- OK Button -->
    <TextView
        android:id="@+id/tvDialogMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/bg_dialog_message_simple"
        android:elevation="12dp"
        android:fontFamily="@font/fredoka_one"
        android:gravity="center"
        android:paddingStart="28dp"
        android:paddingTop="24dp"
        android:paddingEnd="28dp"
        android:paddingBottom="24dp"
        android:text="We have sent a link to reset your password!"
        android:textColor="#2C4A6E"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.425" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDialogOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:textSize="22sp"
        android:textColor="#2C4A6E"
        android:fontFamily="@font/fredoka_one"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:background="@drawable/btn_done_signup"
        android:paddingStart="70dp"
        android:paddingEnd="70dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:elevation="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvDialogMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="28dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>

