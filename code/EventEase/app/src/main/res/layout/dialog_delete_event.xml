<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialogBlurBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/entrant_dialog_blur_background"
    android:clickable="true"
    android:focusable="true">

<androidx.cardview.widget.CardView
    android:id="@+id/dialogCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="32dp"
    android:layout_gravity="center"
    app:cardCornerRadius="20dp"
    app:cardElevation="24dp"
    android:backgroundTint="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title Section -->
        <TextView
            android:id="@+id/tvDeleteTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Event"
            android:textSize="32sp"
            android:textColor="#223C65"
            android:padding="24dp"
            android:paddingBottom="16dp"
            android:textStyle="bold"
            android:background="#FFFFFF"
            android:gravity="center"
            android:shadowColor="#80000000"
            android:shadowDx="0"
            android:shadowDy="4"
            android:shadowRadius="8"/>

        <!-- Divider 1 (under title) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#223C65"/>

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <!-- Warning Message -->
            <TextView
                android:id="@+id/tvDeleteMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Are you sure you want to delete this event? This action cannot be undone. All event data including waitlists, entrants, and invitations will be permanently deleted from the database."
                android:textColor="@color/ee_navy_dark"
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.2"
                android:gravity="center"/>

        </LinearLayout>

        <!-- Divider 2 (above buttons) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#223C65"/>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="24dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:gravity="center"
            android:weightSum="2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancelDelete"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="12dp"
                android:text="Cancel"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#A7D4D4"
                android:elevation="8dp"
                app:cornerRadius="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConfirmDelete"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="Delete"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#E57373"
                android:elevation="8dp"
                app:cornerRadius="8dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

</FrameLayout>

