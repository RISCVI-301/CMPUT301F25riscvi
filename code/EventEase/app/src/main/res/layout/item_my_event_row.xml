<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="14dp"
    app:cardBackgroundColor="#3D5A80"
    app:strokeColor="#E0FFFFFF"
    app:strokeWidth="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Event image - fills entire card -->
        <ImageView
            android:id="@+id/event_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@drawable/card_image_placeholder"/>

        <!-- Gradient overlay at bottom for text readability -->
        <View
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/gradient_overlay"/>

        <!-- INVITED badge (circular dot on top-left) -->
        <View
            android:id="@+id/invited_badge"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_margin="16dp"
            android:background="@drawable/badge_invited_bg"
            android:elevation="8dp"
            android:visibility="gone"/>

        <!-- Event title - at bottom with gradient background -->
        <TextView
            android:id="@+id/event_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="32dp"
            android:text="Sample Event"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:fontFamily="@font/fredoka_one"
            android:elevation="4dp"
            android:shadowColor="#80000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="4"/>

        <!-- Subtitle (date • location) -->
        <TextView
            android:id="@+id/event_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="Oct 12, 5:30 PM • Pool A"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:elevation="4dp"
            android:shadowColor="#80000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="4"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
