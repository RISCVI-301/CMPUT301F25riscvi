<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_marginBottom="20dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="14dp"
    app:cardBackgroundColor="#3D5A80"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_glow_bg"
        android:padding="12dp">

        <!-- Event image -->
        <ImageView
            android:id="@+id/event_image"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_event"
            android:contentDescription="@string/event_image"/>

        <!-- INVITED badge (over the image, top-right) -->
        <TextView
            android:id="@+id/invited_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/event_image"
            android:layout_alignEnd="@id/event_image"
            android:layout_margin="8dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="INVITED"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:background="@drawable/badge_invited_bg"
            android:visibility="gone"/>

        <!-- Event title -->
        <TextView
            android:id="@+id/event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/event_image"
            android:layout_marginTop="8dp"
            android:text="Sample Event"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>

        <!-- Subtitle (you wrote price; we’ll fill with date • location from model) -->
        <TextView
            android:id="@+id/event_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/event_name"
            android:layout_marginTop="4dp"
            android:text="Oct 12, 5:30 PM • Pool A"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
