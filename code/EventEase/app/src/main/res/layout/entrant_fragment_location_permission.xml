<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3D5A7A"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable Location &amp; Notifications"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"/>

        <!-- Explanation Text -->
        <TextView
            android:id="@+id/tvExplanation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="We need your location to show nearby events and notifications to keep you updated about your events."
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"/>

        <!-- Permission Dialog Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/permissionCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="24dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="#E8F4F8"
            app:layout_constraintTop_toBottomOf="@id/tvExplanation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="32dp">

                <!-- Location Icon Circle -->
                <View
                    android:id="@+id/iconCircle"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/entrant_circle_location_icon_bg"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <!-- Location Icon -->
                <ImageView
                    android:id="@+id/iconLocation"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/entrant_ic_location_pin"
                    android:tint="#2C4A6E"
                    app:layout_constraintTop_toTopOf="@id/iconCircle"
                    app:layout_constraintBottom_toBottomOf="@id/iconCircle"
                    app:layout_constraintStart_toStartOf="@id/iconCircle"
                    app:layout_constraintEnd_toEndOf="@id/iconCircle"
                    android:contentDescription="Location Icon"/>

                <!-- Permission Text -->
                <TextView
                    android:id="@+id/tvPermissionText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Allow EventEase to access device location?"
                    android:textSize="18sp"
                    android:textColor="#2C4A6E"
                    android:textStyle="bold"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@id/iconCircle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="24dp"/>

                <!-- Location Explanation -->
                <TextView
                    android:id="@+id/tvLocationExplanation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Some organizers may need to verify entrants' location. Don't worry, your location won't be revealed until necessary."
                    android:textSize="14sp"
                    android:textColor="#2C4A6E"
                    android:gravity="center"
                    android:lineSpacingExtra="2dp"
                    app:layout_constraintTop_toBottomOf="@id/tvPermissionText"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"/>

                <!-- Notification Explanation -->
                <TextView
                    android:id="@+id/tvNotificationExplanation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Notifications help you stay updated about your events and important updates."
                    android:textSize="14sp"
                    android:textColor="#2C4A6E"
                    android:gravity="center"
                    android:lineSpacingExtra="2dp"
                    app:layout_constraintTop_toBottomOf="@id/tvLocationExplanation"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"/>

                <!-- Allow Permission Button -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnAllowPermission"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Allow Permission"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:background="@drawable/entrant_btn_location_permission"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:elevation="4dp"
                    app:layout_constraintTop_toBottomOf="@id/tvNotificationExplanation"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="8dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:indeterminateTint="#8DD3D5"
            app:layout_constraintTop_toBottomOf="@id/permissionCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

