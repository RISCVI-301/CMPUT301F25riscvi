<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#223C65"
    tools:context=".AdminNotificationLogsActivity">

    <!-- Green Header from Mockup -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#9AD9D0"
        android:gravity="center_vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fredoka_bold"
            android:text="EventEase"
            android:textColor="#1D3557"
            android:textSize="34sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Admin Title Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/admin_title_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/fredoka_bold"
        android:paddingVertical="12dp"
        android:text="Admin"
        android:textColor="#223C65"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="#CEE8FF"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- RecyclerView for the list of logs -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/logs_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="24dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/admin_title_button"
        app:layout_constraintVertical_bias="0.0"
        />

    <FrameLayout
        android:id="@+id/bottom_navigation_container"
        android:layout_width="412dp"
        android:layout_height="90dp"
        android:background="#D0DAE5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:paddingVertical="8dp"
            app:elevation="0dp"
            app:itemBackground="@drawable/nav_icon_background_selector"
            app:itemIconSize="32dp"
            app:itemIconTint="@android:color/white"
            app:itemPaddingBottom="4dp"
            app:itemPaddingTop="4dp"

            app:itemRippleColor="@null"

            app:itemTextAppearanceActive="@style/NavTextStyle"
            app:itemTextAppearanceInactive="@style/NavTextStyle"
            app:itemTextColor="#223C65"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/admin_bottom_nav_menu" />

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
