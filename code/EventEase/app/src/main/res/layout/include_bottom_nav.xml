<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.bottomnavigation.BottomNavigationView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_nav"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/ee_bottombar_bg"

    app:menu="@menu/menu_bottom_nav"
    app:itemIconSize="33dp"

    app:itemIconTint="@null"

    app:itemTextColor="@color/bottom_nav_text"

    app:itemActiveIndicatorStyle="@style/AppBottomNav.ActiveIndicator"
    app:itemBackground="@drawable/bnv_item_bg_transparent"
    app:itemRippleColor="@android:color/transparent"

    app:labelVisibilityMode="labeled"/>
