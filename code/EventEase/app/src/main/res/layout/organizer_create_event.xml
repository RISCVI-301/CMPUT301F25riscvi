<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ee_navy_dark">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ee_mint_aqua"
        android:padding="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@android:color/transparent"
            android:contentDescription="Back"
            android:src="@android:drawable/ic_media_previous"
            android:tint="@color/ee_navy_dark"/>

        <TextView
            android:layout_marginStart="12dp"
            android:text="EventEase"
            android:textStyle="bold"
            android:textSize="28sp"
            android:textColor="@color/ee_navy_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="64dp"
        android:clipToPadding="false"
        android:paddingBottom="96dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Title bar -->
            <TextView
                android:text="Create New Event"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="@color/ee_text_light"
                android:background="@drawable/ee_card_bg"
                android:padding="12dp"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!-- Event Name + poster camera -->
            <TextView
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="Event Name"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/ee_text_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/etTitle"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:background="@drawable/ee_card_bg"
                    android:padding="18dp"
                    android:hint="Enter title"
                    android:textColor="@color/ee_text_light"
                    android:textColorHint="#B3FFFFFF"/>

                <ImageButton
                    android:id="@+id/btnPickPoster"
                    android:layout_marginStart="8dp"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/ee_card_bg"
                    android:contentDescription="Pick poster"
                    android:tint="@color/ee_text_light"
                    android:src="@android:drawable/ic_menu_camera"/>
            </LinearLayout>

            <!-- Description + pencil -->
            <TextView
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                android:text="Description"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/ee_text_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/etDescription"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:minLines="3"
                    android:background="@drawable/ee_card_bg"
                    android:padding="18dp"
                    android:hint="Add details"
                    android:textColor="@color/ee_text_light"
                    android:textColorHint="#B3FFFFFF"/>

                <ImageButton
                    android:id="@+id/btnEditDesc"
                    android:layout_marginStart="8dp"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/ee_card_bg"
                    android:contentDescription="Edit"
                    android:tint="@color/ee_text_light"
                    android:src="@android:drawable/ic_menu_edit"/>
            </LinearLayout>

            <!-- Registration Period -->
            <TextView
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                android:text="Registration Period"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/ee_text_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="16dp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:text="Start"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/ee_text_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnStart"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Select"
                        android:textColor="@color/ee_text_light"
                        android:textSize="16sp"
                        app:backgroundTint="@color/ee_navy_dark"
                        app:strokeColor="@color/ee_mint_aqua"
                        app:strokeWidth="2dp"
                        app:rippleColor="@color/ee_mint_aqua"
                        app:cornerRadius="12dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:text="End"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/ee_text_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnEnd"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Select"
                        android:textColor="@color/ee_text_light"
                        android:textSize="16sp"
                        app:backgroundTint="@color/ee_navy_dark"
                        app:strokeColor="@color/ee_mint_aqua"
                        app:strokeWidth="2dp"
                        app:rippleColor="@color/ee_mint_aqua"
                        app:cornerRadius="12dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Toggles -->
            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="Geolocation"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/ee_text_light"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <Switch
                    android:id="@+id/swGeo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="QR Code"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/ee_text_light"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <Switch
                    android:id="@+id/swQr"
                    android:checked="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"/>
            </LinearLayout>

            <!-- Entrants -->
            <TextView
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="Number of Entrants"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/ee_text_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RadioGroup
                android:id="@+id/rgEntrants"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <RadioButton
                    android:id="@+id/rbAny"
                    android:checked="true"
                    android:text="Any Number"
                    android:textColor="@color/ee_text_light"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/rbSpecific"
                        android:text="Specific Number"
                        android:textColor="@color/ee_text_light"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/etCapacity"
                        android:layout_marginStart="12dp"
                        android:enabled="false"
                        android:layout_width="84dp"
                        android:layout_height="56dp"
                        android:background="@drawable/ee_card_bg"
                        android:padding="18dp"
                        android:hint="0"
                        android:inputType="number"
                        android:textColor="@color/ee_text_light"
                        android:textColorHint="#80FFFFFF"/>
                </LinearLayout>
            </RadioGroup>

        </LinearLayout>
    </ScrollView>

    <!-- Fixed bottom footer with Save button -->
    <LinearLayout
        android:id="@+id/footerBar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:padding="16dp"
        android:background="@color/ee_navy_dark"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="SAVE CHANGES"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/ee_navy_dark"
            android:elevation="8dp"
            app:backgroundTint="@color/ee_mint_aqua"
            app:rippleColor="@color/ee_card"
            app:cornerRadius="12dp"/>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>