<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:background="@color/ee_navy_dark">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/ee_topbar_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="64dp"
        android:clipToPadding="false"
        android:paddingBottom="96dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Back button and Create New Event title -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="8dp">

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Back"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_arrow_back_24"
                    app:tint="#FFFFFF" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Create New Event"
                    android:textColor="@color/ee_text_light"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btnBack"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Event Name + poster camera -->

            <TextView
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="Event Name"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/ee_text_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/etTitle"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:background="@drawable/ee_card_bg"
                    android:padding="18dp"
                    android:hint="Enter title"
                    android:textColor="@color/ee_text_light"
                    android:textColorHint="#B3FFFFFF"/>

                <ImageButton
                    android:id="@+id/btnPickPoster"
                    android:layout_marginStart="8dp"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/ee_card_bg"
                    android:contentDescription="Pick poster"
                    android:tint="@color/ee_text_light"
                    android:src="@android:drawable/ic_menu_camera"/>
            </LinearLayout>

            <!-- Poster Preview Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Poster Preview"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/ee_text_light"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCropPoster"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adjust Crop"
                    android:textColor="@color/ee_topbar_bg"
                    android:textSize="14sp"
                    android:visibility="gone"
                    app:cornerRadius="8dp"/>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/posterPreviewCard"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/ee_card"
                app:cardUseCompatPadding="false"
                app:cardPreventCornerOverlap="false">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipChildren="true"
                    android:clipToPadding="false">

                    <ImageView
                        android:id="@+id/posterPreview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="matrix"
                        android:contentDescription="Poster preview"/>

                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <!-- Description + pencil -->
            <TextView
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                android:text="Description"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/ee_text_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/etDescription"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:minLines="3"
                    android:background="@drawable/ee_card_bg"
                    android:padding="18dp"
                    android:hint="Add details"
                    android:textColor="@color/ee_text_light"
                    android:textColorHint="#B3FFFFFF"/>

                <ImageButton
                    android:id="@+id/btnEditDesc"
                    android:layout_marginStart="8dp"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/ee_card_bg"
                    android:contentDescription="Edit"
                    android:tint="@color/ee_text_light"
                    android:src="@android:drawable/ic_menu_edit"/>
            </LinearLayout>

            <!-- Guidelines -->
            <TextView
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                android:text="Guidelines"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/ee_text_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/etGuidelines"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:minLines="3"
                    android:background="@drawable/ee_card_bg"
                    android:padding="18dp"
                    android:hint="Add guidelines"
                    android:textColor="@color/ee_text_light"
                    android:textColorHint="#B3FFFFFF"/>

            </LinearLayout>

            <!-- Location -->
            <TextView
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                android:text="Location"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/ee_text_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/etLocation"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:background="@drawable/ee_card_bg"
                    android:padding="18dp"
                    android:hint="Enter location"
                    android:textColor="@color/ee_text_light"
                    android:textColorHint="#B3FFFFFF"/>

            </LinearLayout>

            <!-- Registration Period -->
            <TextView
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                android:text="Registration Period"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/ee_text_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="16dp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:text="Start"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/ee_text_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnStart"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Select"
                        android:textColor="@color/ee_text_light"
                        android:textSize="16sp"
                        app:backgroundTint="@color/ee_navy_dark"
                        app:strokeColor="@color/ee_topbar_bg"
                        app:strokeWidth="2dp"
                        app:rippleColor="@color/ee_topbar_bg"
                        app:cornerRadius="12dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:text="End"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/ee_text_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnEnd"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Select"
                        android:textColor="@color/ee_text_light"
                        android:textSize="16sp"
                        app:backgroundTint="@color/ee_navy_dark"
                        app:strokeColor="@color/ee_topbar_bg"
                        app:strokeWidth="2dp"
                        app:rippleColor="@color/ee_topbar_bg"
                        app:cornerRadius="12dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Deadline to Accept/Decline -->
            <TextView
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                android:text="Deadline to Accept/Reject"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/ee_text_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDeadline"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Select Deadline"
                android:textColor="@color/ee_text_light"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                app:backgroundTint="@color/ee_navy_dark"
                app:strokeColor="@color/ee_topbar_bg"
                app:strokeWidth="2dp"
                app:rippleColor="@color/ee_topbar_bg"
                app:cornerRadius="12dp"/>

            <!-- Event Start Date -->
            <TextView
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                android:text="Event Start Date"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/ee_text_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEventStart"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Select Event Start Date"
                android:textColor="@color/ee_text_light"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                app:backgroundTint="@color/ee_navy_dark"
                app:strokeColor="@color/ee_topbar_bg"
                app:strokeWidth="2dp"
                app:rippleColor="@color/ee_topbar_bg"
                app:cornerRadius="12dp"/>

            <!-- Toggles -->
            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="Geolocation"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/ee_text_light"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <Switch
                    android:id="@+id/swGeo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvTagsLabel"
                android:layout_marginBottom="8dp"
                android:text="Tags / Interests"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/ee_text_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvTagsLimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Add up to 5 tags"
                android:textColor="#80FFFFFF"
                android:textSize="12sp"/>

            <EditText
                android:id="@+id/etTags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/ee_card_bg"
                android:hint="Type a tag and press enter"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLines="1"
                android:padding="18dp"
                android:textColor="@color/ee_text_light"
                android:textColorHint="#80FFFFFF"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupTags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:chipSpacingHorizontal="8dp"
                app:chipSpacingVertical="8dp"
                app:singleLine="false"/>

            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="QR Code"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/ee_text_light"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <Switch
                    android:id="@+id/swQr"
                    android:checked="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"/>
            </LinearLayout>

            <!-- Waiting List Capacity -->
            <TextView
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="Waiting List Capacity"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/ee_text_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RadioGroup
                android:id="@+id/rgEntrants"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rbAny"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Any Number"
                    android:textColor="@color/ee_text_light"
                    android:textSize="16sp"/>

                <RadioButton
                    android:id="@+id/rbSpecific"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Specific Number"
                    android:textColor="@color/ee_text_light"
                    android:textSize="16sp"/>
            </RadioGroup>

            <EditText
                android:id="@+id/etCapacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/ee_card_bg"
                android:enabled="false"
                android:hint="Enter waiting list capacity"
                android:inputType="number"
                android:padding="18dp"
                android:textColor="@color/ee_text_light"
                android:textColorHint="#80FFFFFF"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tvSampleSize"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="Sample Size for Initial Invitation"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/ee_text_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etSampleSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/ee_card_bg"
                android:hint="Enter sample size (number of initial invitations)"
                android:inputType="number"
                android:padding="18dp"
                android:textColor="@color/ee_text_light"
                android:textColorHint="#80FFFFFF"/>

        </LinearLayout>
    </ScrollView>

    <!-- Fixed bottom footer with Save button (matching entrant style) -->
    <LinearLayout
        android:id="@+id/footerBar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:padding="16dp"
        android:background="@color/ee_navy_dark"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="SAVE CHANGES"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/ee_navy_dark"
            android:elevation="8dp"
            app:backgroundTint="@color/ee_topbar_bg"
            app:rippleColor="@color/ee_card"
            app:cornerRadius="12dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:gravity="center"
        android:text="EventEase"
        android:textColor="@color/ee_topbar_text"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_anchor="@+id/linearLayout"
        app:layout_anchorGravity="center" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
