<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#223C65">

    <!-- Mint title bar -->
    <TextView
        android:id="@+id/tvBrand"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:text="EventEase"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="#1A2C44"
        android:background="#A7D4D4" />

    <!-- Back + Event title row -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingHorizontal="8dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/ic_arrow_back_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#FFFFFF" />

        <TextView
            android:id="@+id/tvEventTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="20sp"
            android:singleLine="true"
            android:ellipsize="end"
            tools:text="Event Name"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Poster image -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeColor="@android:color/transparent"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/ivPoster"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Date, Time, and Location -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeColor="@android:color/transparent"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#3A4F6B">

                <TextView
                    android:id="@+id/tvDateLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:text="Loading..."
                    tools:text="Mon, Nov 30 · 4:00 PM • Community Pool" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Overview -->
            <TextView
                android:id="@+id/tvOverviewLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Overview"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeColor="@android:color/transparent"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#3A4F6B">

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    tools:text="This is a sample description for the event..." />
            </com.google.android.material.card.MaterialCardView>

            <!-- Waitlist row -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeColor="@android:color/transparent"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="#3A4F6B">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="10dp">

                    <TextView
                        android:id="@+id/tvWaitlistLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Number of entrants on wait-list"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tvWaitlistCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        tools:text="12" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Guidelines -->
            <TextView
                android:id="@+id/tvGuidelinesLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guidelines"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeColor="@android:color/transparent"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="#3A4F6B">

                <TextView
                    android:id="@+id/tvGuidelines"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    tools:text="• Bring your own towel and swimwear&#10;• No glass containers&#10;• Follow lifeguard instructions" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Event QR Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEventQR"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Event QR"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="#2C4A6E"
                app:cornerRadius="16dp"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#A7D4D4" />

            <!-- Delete button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDeleteEvent"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Delete Event"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                app:cornerRadius="16dp"
                android:backgroundTint="#E89B9B" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>