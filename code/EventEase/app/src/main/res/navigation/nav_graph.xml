<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/signupFragment">

    <fragment
        android:id="@+id/signupFragment"
        android:name="com.EventEase.auth.SignupFragment"
        android:label="Sign Up">
        <action
            android:id="@+id/action_signup_to_login"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_signup_to_discover"
            app:destination="@id/discoverFragment"
            app:popUpTo="@id/signupFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.EventEase.auth.LoginFragment"
        android:label="Login">
        <action
            android:id="@+id/action_login_to_signup"
            app:destination="@id/signupFragment" />
        <action
            android:id="@+id/action_login_to_discover"
            app:destination="@id/discoverFragment"
            app:popUpTo="@id/signupFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/myEventsFragment"
        android:name="com.EventEase.ui.entrant.myevents.MyEventsFragment"
        android:label="My Events" />

    <fragment
        android:id="@+id/discoverFragment"
        android:name="com.EventEase.ui.entrant.discover.DiscoverFragment"
        android:label="Discover" />

    <fragment
        android:id="@+id/accountFragment"
        android:name="com.EventEase.ui.entrant.profile.AccountFragment"
        android:label="Account" />

    <!-- Activity placeholders (IDs only); actual navigation to these may be via intents later -->
    <activity
        android:id="@+id/eventDetailActivity"
        android:name="com.EventEase.ui.entrant.eventdetail.EventDetailActivity"
        android:label="Event Detail" />

    <activity
        android:id="@+id/profileActivity"
        android:name="com.EventEase.ui.entrant.profile.ProfileActivity"
        android:label="Profile" />
</navigation>
